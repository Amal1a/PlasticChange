<header>
  <nav>
    <div class="nav">
      <a href="/" title="Link til forside"><div class="img-icon"></div></a>

      <div class="burger-menu">☰</div>
      <div class="close-icon">✕</div>

      <ul class="slide-in-top">
        <li>
          <a class="basiclink" href="/defemprincipper">De 5 Principper</a>
        </li>
        <li>
          <a class="basiclink" href="/hvorforgenbrug">Hvorfor Genbrug?</a>
        </li>
        <li>
          <a class="pinklink" href="/forms">Bliv en Plastic Changer</a>
        </li>
      </ul>
    </div>
  </nav>
</header>

<style>
  .nav {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    margin: 0;
    display: flex;
    padding: var(--nav-padding-vertical, 0rem)
      var(--nav-padding-horizontal, 3.5rem);
    justify-content: space-between;
    align-items: center;
    background-color: transparent;
    z-index: 1000; /* Set a high z-index value */
  }

  a {
    text-decoration: none;
  }
  .basiclink {
    text-decoration: none;
    color: var(--link-color-default, --color-secondary-graphite-dark);
    /* color: var(--color-secondary-graphite-dark: #1c1e23); */
  }
  .basiclink:hover {
    color: var(--text-color-link-hover-color, #c01b47);
    text-decoration: underline;
  }

  .basiclink:active {
    color: var(
      --button-primary-default-text-color,
      --color-secondary-graphite-dark
    );
    text-decoration: underline;
  }
  ul {
    list-style: none;
    display: flex;
    justify-content: flex-end;
    align-items: center;
    gap: 3.4375rem;
  }

  .pinklink {
    text-decoration: underline;
    color: var(--text-color-link-hover-color, #c01b47);
  }

  .pinklink:hover {
    color: var(--text-paragraph-graphitedark, #1c1e23);
    text-decoration: underline;
  }

  .pinklink:active {
    color: var(--text-color-link-hover-color, #c01b47);
    text-decoration: underline;
  }

  li {
    font-family: "Rubik", sans-serif;
  }

  /* ----------- ama herfra ----------- */

  header {
    margin: 0;
    padding: 0;
  }

  .img-icon {
    background-image: url("../../../src/asset/icons/logo.svg");
    background-size: cover;
    background-repeat: no-repeat;
    height: 5.1875rem;
    width: 15.5rem;
  }
  .burger-menu {
    display: none;
    cursor: pointer;
    font-size: 2.60444rem;
    color: var(--text-paragraph-color-pine-green-medium, #2a5f5e);
  }

  .close-icon {
    display: none;
    cursor: pointer;
    font-size: 2.60444rem;
    /* transition: height 300ms linear; */
    color: var(--text-paragraph-color-pine-green-medium, #2a5f5e);
  }

  @media (max-width: 1200px) {
    .nav {
      position: fixed;
      top: 0;
      left: 0;
      height: 2.60444rem;
      width: 100%;
      margin: 0;
      padding: var(--nav-padding-vertical, 0rem)
        var(--nav-padding-horizontal, 3.5rem);
      display: flex;
      justify-content: space-between;
      background: var(--Color-Secondary-white-blush, rgba(255, 255, 255, 0.6));
      z-index: 1000; /* Set a high z-index value */
    }

    .burger-menu {
      display: block;
    }

    .close-icon {
      display: none;
    }

    .nav .img-icon {
      width: 8.93525rem;
      height: 2.60444rem;
      /* order: 1;  */
    }

    .nav ul {
      display: none;
      flex-direction: column;
      width: 100%;
      position: absolute;
      right: 0;
      background: var(--color-complimentary-pine-green-light, #90b7b6);
      z-index: 1000; /* Set a high z-index value */
      /* transition: transform 1s; */
    }
  }

  .nav.open {
    background: var(--color-complimentary-pine-green-light, #90b7b6);
    /* transition: height 300ms linear; */
  }

  .nav.open ul {
    display: flex;
    top: 100%;
    padding: 3rem;
  }

  .nav.open .burger-menu {
    display: none;
  }

  .nav.open .close-icon {
    display: block;
    /* transition: height 300ms linear; */
  }

  /* --------- Animista from here ------------ */

  .slide-in-top {
    -webkit-animation: slide-in-top 0.7s cubic-bezier(0.165, 0.84, 0.44, 1) both;
    animation: slide-in-top 0.7s cubic-bezier(0.165, 0.84, 0.44, 1) both;
  }

  /**
 * ----------------------------------------
 * animation slide-in-top
 * ----------------------------------------
 */
  @-webkit-keyframes slide-in-top {
    0% {
      -webkit-transform: translateY(-1000px);
      transform: translateY(-1000px);
      opacity: 0;
    }
    100% {
      -webkit-transform: translateY(0);
      transform: translateY(0);
      opacity: 1;
    }
  }
  @keyframes slide-in-top {
    0% {
      -webkit-transform: translateY(-1000px);
      transform: translateY(-1000px);
      opacity: 0;
    }
    100% {
      -webkit-transform: translateY(0);
      transform: translateY(0);
      opacity: 1;
    }
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    const nav = document.querySelector(".nav");
    const burgerMenu = document.querySelector(".burger-menu");
    const closeIcon = document.querySelector(".close-icon");
    const menuList = document.querySelector(".nav ul");

    burgerMenu.addEventListener("click", function () {
      nav.classList.toggle("open");
      menuList.classList.toggle("slide-in-top");
    });

    closeIcon.addEventListener("click", function () {
      nav.classList.remove("open");
      menuList.classList.remove("slide-in-top");
    });
  });
</script>
