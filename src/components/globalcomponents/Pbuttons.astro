---
const { title, size } = Astro.props;
---

<button data-size={size}>{title}</button>

<style>


  button:hover {
    background: var(--color-complimentary-pine-green-normal, #007c79);
    transition: background-color 300ms;
  }

  [data-size="large"] {
    font-size: 32px;
    font-weight: 700;
    /* font-family: "Rubik"; */
  }

  [data-size="forms"] {
    width: 100%;
    padding: var(--button-padding-vertical, 1rem)
      var(--button-padding-horizontal, 2rem);
    font-size: 1rem;
    font-weight: 700;
    box-sizing: border-box; /* Include padding and border in the width */
    margin-top: 0.5rem;
    margin-right: 0.5rem;
    border-radius: 0.3125rem;
    font-family: "Rubik";
    max-width: 14.68rem;
  }
  
  button {
    padding: var(--button-padding-vertical, 1rem)
      var(--button-padding-horizontal, 2rem);
    border-radius: 0.0625rem;
    /* background: var(--color-primary-cerise-red-normal, #e72458); */
    background: var(--color-primary-cerise-red-medium);
    color: var(--button-secondary-hover-text-color, --color-secondary-white);
    border: none;
    box-shadow: 0px 4px 4px 0px rgba(0, 0, 0, 0.25);
    font-family: "Rubik";
    min-width: 14.688rem;
    /* font-size: 20px; */
  }

</style>
