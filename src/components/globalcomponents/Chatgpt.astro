<style>
  
  .container {
    max-width: 460px;
    margin: 20px auto;
    padding: 44px;
    padding-top: 30px;
    gap: 50px;
    background: var(--color-complimentary-pine-green-lightest, #d3e2e2);
    border-radius: 5px;
    text-align: left;
  }

  .pc-text {
    color: var(--color-complimentary-pine-green-medium, #2a5f5e);
    font-family: Rubik;
    font-size: 32px;
    font-style: normal;
    font-weight: 800;
    line-height: 40px;
  }

  .fs-text {
    color: var(--color-complimentary-pine-green-dark, #142c2b);
    font-family: Rubik;
    font-size: 32px;
    font-style: normal;
    font-weight: 800;
    line-height: normal;
  }

  form {
    padding-top: 16px;
    padding-left: 44px;
    padding-right: 44px;
    padding-bottom: 30px;
    text-align: left;
    display: block;

    color: var(--color-secondary-graphite-dark, #1C1E23);
font-family: Rubik;
font-size: 13px;
font-style: normal;
font-weight: 600;
  }

  form label {
    margin-top: 24px; /* Adds 24px space above each label */
    display: block; /* Ensures the label is a block-level element */
  }

  

  h1 {
    color: #000;
    font-family: Poppins;
    font-size: 32px;
    font-style: normal;
    font-weight: 400;
    line-height: 1.3;
  }

  p {
    color: var(--color-complimentary-pine-green-normal, #007c79);
    font-family: Rubik;
    font-size: 16px;
    font-style: normal;
    font-weight: 400;
  }

  .inline {
    display: flex; /* Enables flexbox layout */
    justify-content: space-between; /* Distributes space between the items */
}


  .donation-type button,
  .amount button {
width: 100%;
    display: inline-flex;
    margin-right: 8px;
    padding: 12px 24px;
    justify-content: center;
    align-items: center;
    border: 1px solid #e3e3e3;
    background: var(--button-background-color, #f8f8f8);
    color: var(--color-secondary-graphite-dark, #1c1e23);
    margin-top: 8px;

    color: var(--color-secondary-graphite-dark, #1c1e23);
    text-align: center;
    font-family: Rubik;
    font-size: 16px;
    font-style: bold;
    font-weight: 400;
  }


  .donation-type button:focus,
  .amount button:focus,
  .donation-type button:active,
  .amount button:active {
    background: #ddd;
  }

  input[type="text"] {
    width: calc(100% - 8px);
    padding: 15px 30px; /* Match the padding of the buttons */
    border: 1px solid #e3e3e3; /* Match the button border, if necessary */
    box-sizing: border-box; /* Ensure padding and border are included in total width/height */
    margin-top: 8px; 
    margin-right: 8px; 

  }

  .donate-button {
    width: 100%;
    margin-top: 24px;
    padding: 10px;
    border: none;
    background: #e74c3c;
    color: white;
    cursor: pointer;
  }

  .donate-button:hover {
    background: #c0392b;
  }

  button.active {
    background: #ddd; /* or any highlight color you prefer */
    border-color: #bbb;
  }

  a {
    color: #3498db;
    text-decoration: none;
    font-size: 16px;
  }

  a:hover {
    text-decoration: underline;
  }
</style>


<script>
  // Select buttons
  const oneTimeButton = document.getElementById("one-time");
  const monthlyButton = document.getElementById("monthly");
  const amountButtons = document.querySelectorAll(".amount button");

  // Function to toggle 'active' class
  function toggleButtonActive(button) {
    if (button.classList.contains("active")) {
      button.classList.remove("active");
    } else {
      // Remove active from all buttons
      [oneTimeButton, monthlyButton].forEach((btn) =>
        btn.classList.remove("active")
      );
      // Add active to the clicked button
      button.classList.add("active");
    }
  }

  // Event listeners for buttons
  oneTimeButton.addEventListener("click", function () {
    toggleButtonActive(oneTimeButton);
  });

  monthlyButton.addEventListener("click", function () {
    toggleButtonActive(monthlyButton);
  });

  // Example of how you might handle amount buttons
  amountButtons.forEach((btn) => {
    btn.addEventListener("click", function () {
      // Remove active from all amount buttons
      amountButtons.forEach((button) => button.classList.remove("active"));
      // Add active to the clicked button
      btn.classList.add("active");
    });
  });
</script>
