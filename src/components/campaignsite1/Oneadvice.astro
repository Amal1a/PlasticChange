---
const { image, title, description } = Astro.props;
---

<section class="oneadvice">
  <div>
    <img data-size={image} src="src/asset/icons/GoderaadMilk.svg" alt="" />
  </div>
  <div>
    <h3 data-size={title}>Din Mælk</h3>
    <p data-size={description}>Køb din mælk uden skruelåg</p>
    <style>
      .oneadvice {
        display: flex;
        align-items: center;
        gap: 1.75rem;
      }
    </style>
  </div>
</section>
