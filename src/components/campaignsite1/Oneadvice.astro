---
const { image, title, description } = Astro.props;
---

<section class="oneadvice">
  <div>
    <img data-size={image} src="" alt="" />
  </div>
  <div>
    <h3 data-size={title}></h3>
    <p data-size={description}></p>
    <style>
      .oneadvice {
        display: flex;
        align-items: center;
        gap: 1.75rem;
      }
    </style>
  </div>
</section>
